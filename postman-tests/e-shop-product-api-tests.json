	"item": [
		{
			"name": "Create product",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус код 200 (ОК)\", function() {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Ответ содержит success:true и данные товара\", function() {\r",
							"    const responseJson = pm.response.json();\r",
							"    pm.expect(responseJson.success).to.be.true;\r",
							"    pm.expect(responseJson.product).to.be.an('object');\r",
							"    pm.expect(responseJson.product).to.have.property('id');\r",
							"    pm.expect(responseJson.product).to.have.property('name');\r",
							"    pm.expect(responseJson.product).to.have.property('price');\r",
							"});\r",
							"\r",
							"if (pm.response.code === 200) {\r",
							"    const responseJson = pm.response.json();\r",
							"    const savedProductId = responseJson.product.id;\r",
							"    \r",
							"    pm.environment.set('product_id', savedProductId);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
